extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Accessory:
      input#name.form-control(type='text' placeholder='Headset, Controller, etc.' name='name' value=(undefined===accessory ? '' : accessory.name))
    div.form-group
      label(for='price') Price: 
      input#price.form-control(type='number' placeholder='$100, $200, etc.' name='price' value=(undefined===accessory ? '' : accessory.price))
    div.form-group
      label(for='numberInStock') In Stock: 
      input#numberInStock.form-control(type='number' placeholder='5, 10, etc.' name='numberInStock' value=(undefined===accessory ? '' : accessory.numberInStock))
    div.form-group
      label(for='summary') Summary: 
      input#summary.form-control(type='textarea' placeholder='Summary goes here' name='summary' value=(undefined===accessory ? '' : accessory.summary))
    div.form-group
      label Compatible Platforms:
      div
        for platform in platforms
          div(style='display: inline; padding-right: 10px;')
            input.checkbox-input(type='checkbox' name='compatiblePlatforms' id=platform._id value=platform._id checked=platform.checked)
            label(for=platform._id) #{platform.name}
    button.btn.btn-primary(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg

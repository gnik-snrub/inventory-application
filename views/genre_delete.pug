extends layout

block content
  h1 #{title} #{genre.name}

  hr

  if allGamesWithGenre.length > 0
    p #[strong Delete the following games before deleting this genre]
    div(style='margin-left: 20px;')
      each game in allGamesWithGenre
        a(href=game.url) #{game.title}
        p #{game.summary}
  else
    p Are you #[strong sure] you want to delete the "#{genre.name}" genre?

    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden' name='genreid' required='true' value=genre._id)

      button.btn.btn-primary(type='submit') Delete
